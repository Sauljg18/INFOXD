    <title>Clientes</title>
   
<body>
  <% if (cliente) { %>
  <header class="header" >
  </header>
  <section class="sidebar">
    <ul>
        <li><a href="/cliente">CLIENTE</a></li>
    <li> <a href="/colab">COLABORADOR</a></h2></li>
<li> <a href="/equipo">Equipo</a></h2></ul></li>
</section>
<main class="main">
       
          <!-- Primer formulario a la izquierda -->
        
          <div class="offset-md-2">
            <div class="container">

         <form action="/update" method="post" class="mb-3" id="formulario" >
           <!-- Contenido del primer formulario -->
           <input id="id_cliente" name="id_cliente" value="<%=cliente.id_cliente%>" hidden />
           <ul>
             <li>
               <label for="nombrecliente" class="form-label">Nombre:</label>
               <input class="form-control form-control-lg" type="text" aria-label=".form-control-lg example" id="namecliente" name="namecliente" value="<%=cliente.nombre%>" />
             </li>
             <li>
               <label for="identificacion" class="form-label">Numero de indentificiacion:</label>
               <input class="form-control form-control-lg" type="number" aria-label=".form-control-lg example" id="identificacion" name="identificacion" value="<%= cliente.identificacion %>" />
             
              </li>
             <li>
               <label for="razon" class="form-label">Razón Social:</label>
               <input class="form-control form-control-lg" type="text" placeholder="Razón Social" aria-label=".form-control-lg example" id="razon" name="razon" value="<%=cliente.razon%>" />
             </li>
             <li>
               <label for="codigo" class="form-label">Codigo Externo:</label>
               <input class="form-control form-control-lg" type="text" placeholder="Código Externo" aria-label=".form-control-lg example" id="externo" name="externo" value="<%=cliente.codigoext%>" />
             </li>
           </ul>
         </div>

         <div class="container2">
     <ul>
         <li><a id="detalle">Detalles</a>
         <ul id="formu1"><ul>
             <li>
               <label for="telefono" class="form-label">Teléfono corporativo:</label>
               <input  class="form-control form-control-lg" type="text" aria-label=".form-control-lg example" id="telefono" name="telefono" value="<%=cliente.telefonocorp%>"/><p>
             </li>
             <li>
               <label for="correocorp" class="form-label">Correo corporativo:</label>
               <input class="form-control form-control-lg" type="email" placeholder="Correo Corporativo" aria-label=".form-control-lg example" id="correocorp" name="correocorp" value="<%=cliente.correocliente%>" /><p>
             </li>
             <li>
               <label for="cliente" class="form-label">Hablar con:</label>
               <input class="form-control form-control-lg" type="text" placeholder="Cliente" aria-label=".form-control-lg example" id="cliente" name="cliente" value="<%=cliente.cliente%>"/><p>
             </li>
             <li>
               <label for="responsable" class="form-label">Responsable:</label>
               <input class="form-control form-control-lg" type="text"  aria-label=".form-control-lg example"  id="responsable" name="responsable" value="<%=cliente.responsable%>">
             </li>
           <li>
             <label for="observar" class="form-label">Observación:</label>
             <input class="form-control form-control-lg" type="text"  aria-label=".form-control-lg example" type="text" id="observacion" name="observacion" value="<%=cliente.observacion%>">
         </li></ul></ul>
         </li>
         <li><a  id="config">Informacion</a>
         <ul >
             <li id="formu2">
                 <div class="mb-3"  id="formu1">
                     <ul>
                        <li>
                          <label for="postal" class="form-label">Codigo Postal:</label>
                          <input class="form-control form-control-lg" type="text" aria-label=".form-control-lg example" type="text" id="postal" name="postal" value="<%=cliente.postal%>"><p>
                        </li>
                         <label for="direcion" class="form-label">Dirección:</label>
                         <input class="form-control form-control-lg" type="text"  aria-label=".form-control-lg example" id="direccion" name="direccion" value="<%=cliente.direccion%>"/>
                       <li>
                         <label for="numeroext" class="form-label">Numero ext:</label>
                         <input class="form-control form-control-lg"  aria-label=".form-control-lg example" type="text" id="numext" name="numext" value="<%=cliente.num_ext%>" /><p>
                       </li>
                       <li></li>
                         <label for="numeroint" class="form-label">Numero int:</label>
                         <input class="form-control form-control-lg"  aria-label=".form-control-lg example" type="text" id="numint" name="numint" value="<%=cliente.num_int%>" /><p>
                       </li>
                       <label for="region" class="form-label">Región:</label><br>
                       <input class="form-control form-control-lg" aria-label=".form-control-lg example" type="text" id="region" name="region" value="<%=cliente.region%>" /><br>
                       <label for="ciudad" class="form-label">Ciudad:</label><br>
                       <input class="form-control form-control-lg"  aria-label=".form-control-lg example" type="text" id="ciudad" name="ciudad" value="<%=cliente.ciudad%>" /><br>
                       <label for="estado" class="form-label">Estado:</label><br>
                       <input class="form-control form-control-lg" aria-label=".form-control-lg example" type="text" id="estado" name="estado" value="<%=cliente.estado%>" /><br>
                     
                       </li>
                     </ul>
                  
                  </div>
         
 
     <input type="submit" class="col" value="ENVIAR">
         </form>
             
     
    </div>

<% } %> 
