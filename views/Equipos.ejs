                <li> <a href="/tarea">Tarea</a></h2></ul></li>
        </header>
        <section class="sidebar"></section>
        <main class="main">
            <div class="cuadro2" >
                <div class="button-container">
                    <a href="/resequipo"><button class="card">Agregar</button></a>
                </div>
                <div class="tablew">
                    <table class="table" >
                        <thead>
                            <tr class="bg-primary">
                                <th scope="col">Id</th>
                                <th scope="col">Nombre</th>
                                <th scope="col">indentificiacion</th>
                                <th scope="col">Fecha</th>
                                <th scope="col">Descripci√≥n</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (results && results.length > 0) { %>
                                <% results.forEach((tablaequipos) => { %>
                                    <tr>
                                        <td scope="row" class="table-primary"><%= tablaequipos.IdEquipo %></td>
                                        <td scope="row" class="table-primary"><%= tablaequipos.Nombre %></td>
                                        <td scope="row" ><%= tablaequipos.Identificador %></td>
                                        <td scope="row" class="table-primary"><%= tablaequipos.Fecha %></td>
                                        <td scope="row" class="table-primary"><%= tablaequipos.Descripcion %></td>
                                        <td>
                                            <a href="/editequipo/<%= tablaequipos.IdEquipo %>" class="btn btn-outline-info">editar</a>
                                            <a href="/deleteequipo/<%= tablaequipos.IdEquipo %>" class="btn btn-outline-info">borrar</a>
                                        </td>
                                    </tr>
                                    <% }) %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="5">No hay datos disponibles.</td>
                                        </tr>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </main>   
        </header>
        <section class="sidebar"> </section>
    </body>
