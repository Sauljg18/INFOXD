<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Servicios</title>
    <link rel="stylesheet" href="resources/estilo/TablaServicios.css">
</head>
<body>

<header class="header">
    <a href="/home"><img src="/resources/IMAGENES/LOGO.PNG"></a>
    <ul>
        <li><a href="/clientes">Cliente</a></li>
        <li><a href="/colab">Colaborador</a></li>
        <li><a href="/ver-equipos">Equipo</a></li>
        <li><a href="/producto">Producto</a></li>
        <li><a href="/servicio">Servicio</a></li>
        <li><a href="/tarea">Tarea</a></li>
    </ul>
</header>

<section class="sidebar"></section>

<div class="container">
    <div class="Titulo">
        <h1>Servicios</h1>
        <button class="add-service-btn" onclick="openModal()">Agregar servicio</button>
    </div>

    <!-- Barra de búsqueda -->
    <div class="search-bar">
        <label for="search">Buscar:</label>
        <input type="text" id="search" placeholder="Buscar servicio...">
    </div>

    <!-- Tabla de servicios -->
    <table class="services-table">
        <thead>
            <tr>
                <th>Servicio</th>
                <th>Eliminar</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Configuración de Antivirus</td>
                <td><button class="delete-btn">❌</button></td>
            </tr>
            <tr>
                <td>Configuración de Software</td>
                <td><button class="delete-btn">❌</button></td>
            </tr>
        </tbody>
    </table>

    <div class="pagination">
        <span>Mostrando registros del 1 al 10</span>
        <div class="pagination-controls">
            <button class="prev-btn">Anterior</button>
            <span class="page-number">1</span>
            <button class="next-btn">Siguiente</button>
        </div>
    </div>
</div>

<!-- Ventana Modal -->
<div id="modal" class="modal">
    <div class="modal-content">
        <span class="close-btn" onclick="closeModal()">&times;</span>
        <h2>Añadir Servicio</h2>
        <form id="serviceForm" action="/agregar-servicio" method="POST">
            <label for="nombre">Nombre del Servicio:</label>
            <input type="text" id="nombre" name="nombre" required>

            <label for="precio">Precio:</label>
            <input type="number" id="precio" name="precio" required>

            <button type="submit">Añadir</button>
        </form>
    </div>
</div>

<script src="resources/javascript/modal.js"></script>

</body>
</html>
