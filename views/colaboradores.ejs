    <form action="/validar" method="post" class="mb-3" id="formulario">
        <ul>
          <li>
            <label for="nombre" class="form-label">Nombre:</label>
            <input  class="form-control form-control-lg" type="text" placeholder="Nombre" aria-label=".form-control-lg example" id="name" name="nombre" required/><p>
          </li>
          <li>
            <label for="usuario" class="form-label">Usuario:</label>
            <input class="form-control form-control-lg" type="text" placeholder="Usuario" aria-label=".form-control-lg example" type="text" id="user" name="usuario" required /><p>
          </li>
          <li>
            <label for="correo" class="form-label">Correo electrónico:</label>
            <input class="form-control form-control-lg" type="email" placeholder="Correo" aria-label=".form-control-lg example" id="mail" name="correo" required/><p>
          </li>
          <li>
            <label for="cargo" class="form-label">Cargo:</label>
            <select class="form-control form-control-lg" type="text" placeholder="Cargo" aria-label=".form-control-lg example" name="cargo" id="cargo">
                <option value="administrador">Administrador</option>
                <option value="supervisor">Supervisor</option>
              </select>
          </li>
          <li>
            <label for="contacto" class="form-label">Contacto:</label>
            <input class="form-control form-control-lg" type="text" placeholder="Contacto" aria-label=".form-control-lg example" type="text" id="contact" name="contacto" required>
          </li>
        </ul>
        
      
    </div>
    </div>
   
    <div class="container2" id="contend" >
      
     <div class="mb-4"  id="formu1">
         <ul>
            <li>
              <label for="acceso" class="form-label">Perfil de Acceso:</label>
              <select class="form-control form-control-lg" type="text" placeholder=".form-control-lg" aria-label=".form-control-lg example" name="acceso" id="acceso">
                  <option value="administrador">Administrador</option>
                  <option value="supervisor">Supervisor</option>
                  <option value="usuario">Usuario</option>
                </select><p>
            </li>
            <label for="contrasena" class="form-label">Contraseña:</label>
            <input class="form-control form-control-lg" type="password" placeholder="Contraseña" aria-label=".form-control-lg example" id="password" name="contrasena" required/>
            <div class="col">
             <div class="press0" type="button" id="viewPassword">Mostrar Contraseña</div><p>
           </div>
           <li>
             <label for="confirmar" class="form-label">Confirmar Contraseña:</label>
             <input class="form-control form-control-lg" type="password" placeholder="Confirmar" aria-label=".form-control-lg example" id="confirm" name="confirmar" required /><p>
           </li>
           <li>
            <label for="checar" class="form-label">Check-it:</label>
            <select name="checar" id="checar">
                <option value="auto">Automatico</option>
                <option value="manual">Manual</option>
              </select><p>
           </li>
           <li>
             <label for="valor" class="form-label">Valor por Hora trabajada:</label>
             <input class="form-control form-control-lg" type="text" placeholder="Horas" aria-label=".form-control-lg example" type="text" id="valor" name="valor" required>
           </li>
         </ul>
