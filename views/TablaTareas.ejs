                    <%= tareas.status %>
                  </td>
                  
                  <td>
                    <button class="finalizar-btn btn "  data-id="<%= tareas.id_tarea %>" style="color: rgb(2, 131, 28);">FINALIZAR</button>
                    <button class="reactivar-btn btn "  data-id="<%= tareas.id_tarea %>" style="color: rgb(0, 255, 68);">REACTIVAR</button>
