                      <label for="colaborador" style="color: black">La tarea sera colaborada por:</label>
                      <select name="colaborador" id="colaborador" class="event-colaborador"> 
                          <%  
                              const uniqueColaboradores = [];
                              results.forEach((row) => {
                                  if (!uniqueColaboradores.includes(row.colaboradorNombre)) {
                                      uniqueColaboradores.push(row.colaboradorNombre);
                          %>
                              <option value="<%= row.colaboradorNombre %>"><%= row.colaboradorNombre %></option>
                          <% 
                                  }
                              });
                          %>
                     </div>
                  </form>
              
                              
                              </select>
                              <div class="add-event-input">
                              <label for="fecha" style="color: black">Fecha de tarea:</label>
                              <input type="date" name="fecha" id="fecha">
                              </div>
                              <div class="add-event-input">
                              <label for="hora" style="color: black">Hora:</label>
                              <input type="time" name="hora" id="hora">
                              </div>
                              <div class="add-event-input">
                              <label for="tipo" style="color: black">El Tipo de Tarea:</label>
                              <select name="tipo" id="tipo">
                              </div>
                                  <option value="tipo">Seleccionar Tipo</option>
                                 <option value="Actualizacion de Base de datos"> Actualizaci칩n de Base de datos</option>
                              </select>
                              <div class="add-event-input">
                                <!-- Filtra los nombres de clientes para evitar duplicados -->
                                <label for="equipo" style="color:black">Equipo:</label>
                                <select name="equipo" id="equipo" class="event-name">
                                  <option value="Ninguno">NINGUNO</option>  
                                  <% 
                                        const uniqueEquipos = [];
                                        results.forEach((row) => {
                                            if (!uniqueEquipos.includes(row.equipoNombre)) {
                                                uniqueEquipos.push(row.equipoNombre);
                                    %>
                                        <option value="<%= row.equipoNombre %>"><%= row.equipoNombre %></option>
                                    <% 
                                            }
                                        });
                                    %>
                                </select>
                        </div>
                              <div class="add-event-input">
                              <label for="prioridad" style="color: black">Prioridad:</label>
                              <select name="prioridad" id="prioridad">
                                  <option value="alta">Alta</option>
                                  <option value="media">Media</option>
                                  <option value="baja">Baja</option>
                              </select>
                            </div>
                            <input type="text" name="activo" id="activocliente" value="Activo" hidden>
                            <div class="add-event-input">
                              <label for="descripcion" style="color: black;">Descripci칩n de la tarea:</label>
                              <textarea name="descripcion" id="descripcion" rows="4"></textarea>
                            </div>
                              <label for="satisfaccion">Encuesta de Satisfacci칩n:</label>
                              <input type="checkbox" id="satisfaccion" onclick="toggleEmailField()">
                              <input type="email" id="emailEncuesta" placeholder="Email" style="display: none;">
              
                              <button id="guardar">GUARDAR</button>
                            </form>
                              <div class="add-event-footer">
            
          </div></div>
          <div id="activar" class="display">
          <a class="add-event-btn"  >CERRAR </a></div> 
                        </div>
                      </div>
              </div>
              </div>
            </div>
            <button class="add-event">
              <i class="fas fa-plus"></i>
            </button>
            
          
      
         
          <script src="/resources/javascript/agenda.js"></script>    
    </main>
   


</body> 
</html>